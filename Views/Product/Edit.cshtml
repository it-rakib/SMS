@model SMS.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="mb-3">
        <label>Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>

    <div class="mb-3">
        <label>Sale Price</label>
        <input asp-for="SalePrice" type="number" step="0.01"
               value="@(Model.SalePrice.HasValue? Model.SalePrice.Value.ToString("0.00") : "")"
               class="form-control" />
    </div>

    <div class="mb-3">
        <label>Is Active</label>
        <input type="checkbox" name="IsActive" value="true" @(Model.IsActive.GetValueOrDefault() ? "checked" : "") />
        <input type="hidden" name="IsActive" value="false" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
