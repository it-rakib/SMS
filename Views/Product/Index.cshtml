@model IEnumerable<dynamic>

<h2>Products</h2>

<a asp-action="Create" class="btn btn-success mb-2">Add New Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
@*             <th>ID</th>
 *@            <th>Product Name</th>
            <th>Category</th>
            <th>Sale Price</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
@*                 <td>@item.ProductId</td>
 *@                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@(item.SalePrice != null ? item.SalePrice.ToString("0.00") : "N/A")</td>
                <td>@(item.IsActive != null && item.IsActive == true ? "Yes" : "No")</td>



                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
