@model IEnumerable<SMS.Models.ProductCategory>

<h2>Product Categories</h2>

<a asp-action="Create" class="btn btn-success mb-2">Add New Category</a>

<table class="table table-bordered">
    <thead>
        <tr>
@*             <th>ID</th>
 *@            <th>Category Name</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
@*                 <td>@item.CategoryId</td>
 *@                <td>@item.CategoryName</td>
                <td>@(item.IsActive == true ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
