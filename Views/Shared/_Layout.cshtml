<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopManagementSystem</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center"></div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav mb-2">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Dashboard/Index" class="nav-link"><i class="glyphicon glyphicon-home"></i> Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Account/Logout" class="nav-link"><i class="glyphicon glyphicon-log-out"></i> Logout</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Search -->
                <li class="nav-item mb-2">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit"><i class="fas fa-search"></i></button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search"><i class="fas fa-times"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>

                <!-- Fullscreen -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link d-flex justify-content-center mt-3 mb-3 pb-3">
                <img src="~/assets/img/Shop.jpg" alt="Logo" style="width:95%; background-color:#fff; height:175px;"/>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">               
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="/AdminLte/dist/img/avatar.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block" style="color:#fff;margin-top:3px;">SHOP MANAGEMENT SYS</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2" id="partialViewContainer">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Dashboard/Index"
                               class="nav-link @(currentController == "Dashboard" ? "active" : "")">
                                <i class="nav-icon fa fa-home"></i>
                                <p>Home</p>
                            </a>
                        </li>
                        
                        <li class="nav-item @(currentController == "Product" || currentController == "ProductCategory" ? "menu-open" : "")">
                            <a href="#" class="nav-link @(currentController == "Product" || currentController == "ProductCategory" ? "active" : "")">
                                <i class="nav-icon fas fa-sliders-h"></i>
                                <p>
                                    Settings
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">                               

                                <li class="nav-item">
                                    <a href="/ProductCategory/Index"
                                       class="nav-link @(currentController == "ProductCategory" ? "active" : "")">
                                        <i class="nav-icon fas fa-tags"></i>
                                        <p>Product Category</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Product/Index"
                                       class="nav-link @(currentController == "Product" ? "active" : "")">
                                        <i class="nav-icon fas fa-box"></i>
                                        <p>Products</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/Purchase/Index"
                               class="nav-link @(currentController == "Purchase" ? "active" : "")">
                                <i class="nav-icon fas fa-cart-plus"></i>
                                <p>Purchase</p>
                            </a>
                        </li>


                        <li class="nav-item">
                            <a href="/Sale/Index"
                               class="nav-link @(currentController == "Sale" ? "active" : "")">
                                <i class="nav-icon fas fa-dollar-sign"></i>
                                <p>Sales</p>
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Reports" || currentController == "InventoryReport" ? "menu-open" : "")">
                            <a href="#" class="nav-link @(currentController == "Reports" || currentController == "InventoryReport" ? "active" : "")">
                                <i class="nav-icon fas fa-sliders-h"></i>
                                <p>
                                    Reports
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Reports/InventoryReport"
                                       class="nav-link @(currentController == "InventoryReport" ? "active" : "")">
                                        <i class="nav-icon fas fa-chart-bar"></i>
                                        <p>Inventory Report</p>
                                    </a>
                                </li>
                            </ul>
                        </li>


                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="content">
                @RenderBody()
            </section>
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="d-none d-sm-inline-block">
                <strong>Copyright &copy; 2023 - @DateTime.Now.Year Admin</strong>
                All rights reserved.
            </div>
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 01.Jan.2026
            </div>
        </footer>

        <aside class="control-sidebar control-sidebar-dark"></aside>
        <!-- /.control-sidebar -->

    </div>

    <!-- JS -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    <script>
        $(document).ready(function () {
            // Load sidebar partial
            loadPartialView();

            // Treeview toggle
            $('body').on('click', '.has-treeview', function (e) {
                var isExpanded = $(this).hasClass('treeview-expanded');
                $('.has-treeview.treeview-expanded').not(this).removeClass('treeview-expanded').next('ul').slideUp();
                $(this).next('ul').slideToggle();
                $(this).toggleClass('treeview-expanded', !isExpanded);
            });
        });

        function loadPartialView() {
            $.get('@Url.Action("LeftSideBar", "Home")', function (data) {
                $('#partialViewContainer').html(data);
            });
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>

