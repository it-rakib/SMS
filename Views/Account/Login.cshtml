@model SMS.ViewModels.LoginVM
@{
    Layout = "_LoginLayOut"; // Use main layout
}

@section styles {
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 10pt;
        }

        .login-box {
            max-width: 400px;
            margin: auto;
            padding-top: 50px;
        }

        .logo {
            width: 150px;
            height: 200px;
            margin-bottom: 20px;
        }

        .error {
            color: red;
        }

        height: auto; /* Allow content to determine height */
        padding: 20px 0; /* Space for title + logo */
        text-align: center;
}

    .card-header h2 {
        font-size: 24px;
        color: #343a40;
        margin-bottom: 10px; /* Space between title and logo */
    }

    .logo {
        width: 150px;
        height: auto;
        display: block;
        margin: auto;
    }

    </style>
}

<div class="login-box" style="margin-top:-102px;">
    <div class="card">
        <div class="card-header text-center" style="height:auto; padding:20px;">

            <!-- Title: Shop Management System -->
            <p class="mb-2" style="font-weight:bold;">Shop Management System</p>

            <!-- Logo -->
            <a>
                <img src="~/assets/img/Shop.jpg" class="logo" alt="Logo" />
            </a>
        </div>

        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Username -->
                <div class="form-group row mb-3 align-items-center">
                    <div class="col-md-2 text-center">
                        <i class="fa fa-user fa-lg"></i>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "User Name" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Password -->
                <div class="form-group row mb-3 align-items-center">
                    <div class="col-md-2 text-center">
                        <i class="fas fa-key fa-lg"></i>
                    </div>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="row justify-content-center">
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary w-100">
                            Sign In
                        </button>
                    </div>

                    <div class="col-4">
                        <a href="/Account/Register" class="btn btn-secondary w-100">
                            Sign Up
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>