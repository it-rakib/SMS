@model IEnumerable<dynamic>

<h2>Sales</h2>

<a asp-action="Create" class="btn btn-success mb-2">Add New Sale</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sale Date</th>
            <th>Customer Name</th>
            <th>Total Amount</th>
            <th>Total Items</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.SaleDate?.ToString("dd-MMM-yyyy")</td>
                <td>@sale.CustomerName</td>
                <td>@sale.TotalAmount?.ToString("0.00")</td>
                <td>@sale.TotalItems</td>
                <td>
                    <a asp-action="Details" asp-route-id="@sale.SaleId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@sale.SaleId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@sale.SaleId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
