@model SMS.Models.Sale

<h2>Delete Sale</h2>

<div>
    <h4>Are you sure you want to delete this sale?</h4>
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.SaleDate?.ToString("dd-MMM-yyyy")</dd>
        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.TotalAmount?.ToString("0.00")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SaleId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
